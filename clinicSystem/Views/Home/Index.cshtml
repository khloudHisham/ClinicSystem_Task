@{
    ViewData["Title"] = "Home Page";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>

    body {
        background: linear-gradient(135deg, #e8f9fd 0%, #ffffff 100%);
        font-family: 'Poppins', sans-serif;
    }

    .home-container {
        text-align: center;
        padding: 7rem 1rem;
        animation: fadeIn 1s ease-in-out;
    }

    .home-container h1 {
        font-size: 3.2rem;
        color: #007bff;
        font-weight: 700;
        margin-bottom: 1rem;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
    }

    .home-container h1 span {
        color: #00bcd4;
    }

    .home-container h3 {
        font-size: 1.5rem;
        color: #6c757d;
        margin-bottom: 3rem;
    }

    /* Button Container */
    .btn-container {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 25px;
    }

    /* Custom Button */
    .custom-btn {
        background-color: white;
        color: #007bff;
        border: 2px solid #007bff;
        border-radius: 12px;
        padding: 1rem 2.5rem;
        font-size: 1.2rem;
        font-weight: 600;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 10px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 8px rgba(0, 123, 255, 0.15);
    }

    .custom-btn i {
        font-size: 1.4rem;
    }

    .custom-btn:hover {
        background-color: #007bff;
        color: white;
        transform: translateY(-4px);
        box-shadow: 0 8px 16px rgba(0, 123, 255, 0.25);
    }

    /* Subtle animation */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="home-container animate__animated animate__fadeIn">
    <h1>Welcome To <span>PureCare</span></h1>
    <h3>Your Journey to Better Health Starts Here </h3>

    <div class="btn-container animate__animated animate__fadeInUp">
        <a class="custom-btn" asp-controller="Doctor" asp-action="Index">
            <i class="bi bi-person-badge"></i> Doctors
        </a>
        <a class="custom-btn" asp-controller="Patient" asp-action="Index">
            <i class="bi bi-people"></i> Patients
        </a>
        <a class="custom-btn" asp-controller="Clinic" asp-action="Index">
            <i class="bi bi-hospital"></i> Clinics
        </a>
        <a class="custom-btn" asp-controller="Schedule" asp-action="Index">
            <i class="bi bi-calendar-event"></i> Schedule
        </a>
        <a class="custom-btn" asp-controller="Appointment" asp-action="Index">
            <i class="bi bi-calendar-plus"></i> Book Appointment
        </a>
    </div>
</div>
