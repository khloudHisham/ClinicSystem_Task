@model clinicSystem.Models.Entities.Schedule
@{
    ViewData["Title"] = "New Schedule";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    /* ==== General Page Styling ==== */
    body {
        background: linear-gradient(to right, #e3f2fd, #ffffff);
        font-family: 'Poppins', sans-serif;
    }

    .page-container {
        background: #fff;
        border-radius: 15px;
        padding: 3rem;
        box-shadow: 0 6px 20px rgba(0,0,0,0.1);
        animation: fadeInUp 0.8s ease-in-out;
    }

    .page-title {
        font-size: 2.8rem;
        font-weight: 700;
        color: #2c3e50;
        text-shadow: 1px 1px 3px rgba(0,0,0,0.15);
    }

    /* ==== Custom Blue Buttons ==== */
    .btn-custom {
        border: 2px solid #0dcaf0;
        color: #0dcaf0;
        background-color: transparent;
        font-weight: 600;
        transition: all 0.3s ease;
        border-radius: 10px;
        font-size: 1.2rem;
        padding: 0.8rem 2.5rem;
    }

        .btn-custom:hover {
            background-color: #0dcaf0;
            color: #fff;
            transform: translateY(-2px);
        }

    /* ==== Floating Form Fields ==== */
    .form-floating label {
        color: #2c3e50;
        font-weight: 500;
    }

    .form-select, .form-control {
        border-radius: 12px !important;
        border: 2px solid #0dcaf0 !important;
        transition: all 0.3s ease;
    }

        .form-select:focus, .form-control:focus {
            border-color: #0aa1c0 !important;
            box-shadow: 0 0 0 0.25rem rgba(13,202,240,0.25);
        }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="container my-5">
    <div class="page-container animate__animated animate__fadeIn">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="page-title">Create New Schedule</h1>
            <a class="btn btn-custom btn-lg shadow-sm animate__animated animate__fadeInDown" href="/Schedule/Index">
                <i class="bi bi-arrow-left-circle"></i> Back
            </a>
        </div>

        @using (Html.BeginForm("SaveNew", "Schedule", FormMethod.Post))
        {
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        @Html.DropDownListFor(m => m.DoctorId, (SelectList)ViewBag.Doctors, "-- Select Doctor --", new { @class = "form-select" })
                        @Html.LabelFor(m => m.Doctor)
                        @Html.ValidationMessageFor(m => m.DoctorId, "", new { @class = "text-danger small" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(m => m.DayOfWeek, new { @class = "form-control" })
                        @Html.LabelFor(m => m.DayOfWeek)
                        @Html.ValidationMessageFor(m => m.DayOfWeek, "", new { @class = "text-danger small" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(m => m.StartTime, "{0:hh\\:mm}", new { @class = "form-control", type = "time" })
                        @Html.LabelFor(m => m.StartTime)
                        @Html.ValidationMessageFor(m => m.StartTime, "", new { @class = "text-danger small" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(m => m.EndTime, "{0:hh\\:mm}", new { @class = "form-control", type = "time" })
                        @Html.LabelFor(m => m.EndTime)
                        @Html.ValidationMessageFor(m => m.EndTime, "", new { @class = "text-danger small" })
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-custom px-5 shadow-sm animate__animated animate__pulse">
                    <i class="bi bi-plus-circle-dotted"></i> Add Schedule
                </button>
            </div>
        }
    </div>
</div>
