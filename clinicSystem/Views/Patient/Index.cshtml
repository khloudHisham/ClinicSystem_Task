@model List<clinicSystem.Models.Entities.Patient>
@{
    ViewData["Title"] = "Patients";
}


<div class="container my-5 animate__animated animate__fadeIn">
    <h1 class="text-center text-success mb-4 fw-bold display-4">
        All Patients
    </h1>

    <div class="d-flex justify-content-end mb-4">
        <a class="btn btn-success btn-lg shadow-sm animate__animated animate__fadeInDown" asp-action="New">
            <i class="bi bi-plus-circle"></i> Add Patient
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-striped table-bordered align-middle shadow-sm animate__animated animate__fadeInUp">
            <thead class="table-success text-center">
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Age</th>
                    <th>BirthDate</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model)
                {
                    <tr class="table-row-hover">
                        <td class="fw-bold text-primary">@item.Name</td>
                        <td>@item.Address</td>
                        <td>@item.Age</td>
                        <td>@item.BirthDate.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>








<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<style>
    .table thead th {
        font-size: 1.2rem;
        letter-spacing: 0.5px;
    }

    .table tbody td {
        font-size: 1.05rem;
        padding: 0.75rem;
    }

    .btn-success {
        transition: all 0.4s ease;
    }

        .btn-success:hover {
            background: linear-gradient(135deg, #28a745, #218838);
            border-color: transparent;
            transform: scale(1.05);
        }

    .table-row-hover:hover {
        background-color: #e6f7ff !important;
        transition: background-color 0.3s ease;
        cursor: pointer;
    }

    a.text-primary:hover {
        color: #0d6efd;
        text-decoration: underline;
    }
</style>
